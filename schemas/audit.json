{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://zapnest.com/schemas/audit.json",
    "title": "Audit Trail Object",
    "description": "Schema for traceability audit objects attached to all agent decisions",
    "type": "object",
    "required": [
        "type",
        "id",
        "timestamp"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "signal",
                "supplier",
                "test",
                "claim",
                "decision",
                "approval"
            ],
            "description": "Type of audit record"
        },
        "id": {
            "type": "string",
            "description": "Reference ID (trend-id, supplier-id, test-id, etc.)"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When this evidence was captured"
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "Source URL for verification"
        },
        "summary": {
            "type": "string",
            "maxLength": 500,
            "description": "Brief summary of the evidence"
        },
        "source": {
            "type": "string",
            "description": "Source name (reddit, aliexpress, supplier_sheet, lab_test, etc.)"
        },
        "snippet": {
            "type": "string",
            "maxLength": 1000,
            "description": "Relevant excerpt from source"
        },
        "verified_by": {
            "type": "string",
            "description": "Agent or human who verified this"
        }
    },
    "definitions": {
        "audit_array": {
            "type": "array",
            "items": {
                "$ref": "#"
            },
            "description": "Array of audit objects for traceability"
        }
    }
}